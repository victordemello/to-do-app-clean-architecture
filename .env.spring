# ========================================
# SPRING BOOT + POSTGRESQL CONFIGURATION
# ========================================
# Use this file with: docker-compose --profile spring --env-file .env.spring up

# PostgreSQL Database Configuration
DB_NAME=tododb
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# pgAdmin Configuration
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# Backend Configuration
BACKEND_PORT=8080
DDL_AUTO=update
SHOW_SQL=false

# Logging Levels
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SPRING_LOG_LEVEL=INFO
SQL_LOG_LEVEL=INFO
SQL_BIND_LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_PORT=80
API_URL=http://localhost:8080
