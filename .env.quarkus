# ========================================
# QUARKUS + MYSQL CONFIGURATION
# ========================================
# Use this file with: docker-compose --profile quarkus --env-file .env.quarkus up

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=tododb
MYSQL_USER=todouser
MYSQL_PASSWORD=todopassword
MYSQL_PORT=3306

# Adminer Configuration
ADMINER_PORT=8081

# Backend Configuration
BACKEND_PORT=8080
DDL_AUTO=update
SHOW_SQL=false

# Logging Levels
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
QUARKUS_LOG_LEVEL=INFO
SQL_LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_PORT=80
API_URL=http://localhost:8080
